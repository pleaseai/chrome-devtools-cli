{
  "name": "@pleaseai/chrome-devtools-cli",
  "type": "module",
  "version": "0.3.1",
  "description": "CLI wrapper for Chrome DevTools MCP - Control and inspect Chrome with command-line tools",
  "author": "PleaseAI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pleaseai/chrome-devtools-cli.git"
  },
  "keywords": [
    "chrome",
    "devtools",
    "cli",
    "automation",
    "puppeteer",
    "performance",
    "debugging",
    "browser"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "chrome-devtools": "./dist/cli.js"
  },
  "files": [
    "LICENSE",
    "README.md",
    "dist/**/*.d.ts",
    "dist/**/*.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": "^20.19.0 || ^22.12.0 || >=23"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "bun build src/cli.ts --outdir dist --target bun --format esm && bun build src/index.ts --outdir dist --target bun --format esm && bun build src/browser/index.ts --outdir dist/browser --target bun --format esm && bun build src/commands/index.ts --outdir dist/commands --target bun --format esm",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationDir dist",
    "build:prod": "bun build --compile --minify --sourcemap --bytecode src/cli.ts --outfile dist/chrome-devtools",
    "prepublishOnly": "bun run build && bun run build:types",
    "dev": "bun run src/cli.ts",
    "type-check": "tsc --noEmit",
    "test": "bun test",
    "test:unit": "bun test test/unit",
    "test:integration": "bun test test/integration",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "bun run dist/cli.js",
    "prepare": "husky"
  },
  "dependencies": {
    "@pleaseai/cli-toolkit": "^0.2.0",
    "chrome-devtools-frontend": "^1.0.1536371",
    "commander": "^12.1.0",
    "debug": "^4.4.3",
    "puppeteer": "^24.27.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "latest",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/bun": "^1.3.1",
    "@types/debug": "^4.1.12",
    "@types/node": "^24.3.3",
    "@types/yargs": "^17.0.33",
    "eslint": "^9.20.0",
    "eslint-plugin-format": "^1.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "typescript": "^5.9.3"
  }
}
